{
  // Editor Settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "swift.buildPath": "${workspaceFolder}/CheerComCaluculatorApp",
  // Gemini Code Assist Settings
  "cloudcode.gemini.project": "",
  "cloudcode.gemini.location": "us-central1",
  "cloudcode.gemini.enabled": true,
  // File Associations
  "files.associations": {
    "*.swift": "swift",
    "*.plist": "xml",
    "*.pbxproj": "json"
  },
  // Files to Exclude from Explorer
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/xcuserdata": true,
    "**/*.xcodeproj/project.xcworkspace/xcuserdata": true,
    "**/*.xcodeproj/xcuserdata": true,
    "**/DerivedData": true,
    "**/.build": true
  },
  // Search Exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/xcuserdata": true,
    "**/DerivedData": true
  },
  // Git Settings
  "git.ignoreLimitWarning": true,
  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  // IntelliSense
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  }
}